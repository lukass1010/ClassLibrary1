<Page x:Class="WpfApplication1.AddingTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="381.167"
      Title="AddingTeam">

    <Grid >
        <TextBox x:Name="textTeamName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="New Team Name" VerticalAlignment="Top" Width="120" Margin="25,26,0,0" />
        <TextBox x:Name="textTeamCity" HorizontalAlignment="Left" Height="23" Margin="25,67,0,0" TextWrapping="Wrap" Text="City " VerticalAlignment="Top" Width="120" />
        <TextBox x:Name="textTeamLeague" HorizontalAlignment="Left" Height="23" Margin="25,108,0,0" TextWrapping="Wrap" Text="League" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Add New Team" HorizontalAlignment="Left" Margin="231,67,0,0" VerticalAlignment="Top" Width="120" Height="33" Click="button_Click"/>
    </Grid>
</Page>
