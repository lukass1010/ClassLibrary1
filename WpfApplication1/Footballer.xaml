        <TextBox x:Name="textBoxNumber" HorizontalAlignment="Left" Height="23" Margin="24,144,0,0" TextWrapping="Wrap" Text="Number" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxAge" HorizontalAlignment="Left" Height="23" Margin="24,97,0,0" TextWrapping="Wrap" Text="Age" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
