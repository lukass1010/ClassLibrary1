<Page x:Class="WpfApplication1.Goals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Goals">

    <Grid Margin="0,0,-167,0">
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="232" Margin="10,31,0,0" VerticalAlignment="Top" Width="207" Background="Gray" SelectionChanged="listBox_SelectionChanged" />
        <Label x:Name="label" Content="Goals in this match:" HorizontalAlignment="Left" Margin="24,4,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="EditGoal" HorizontalAlignment="Left" Margin="251,243,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Page>
